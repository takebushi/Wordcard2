<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/card_item_height"
        android:layout_margin="@dimen/card_item_margin"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/icon"
            android:layout_width="@dimen/card_item_height"
            android:layout_height="@dimen/card_item_height" />
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="2"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/title_textview"
                    android:layout_width="0dp"
                    android:layout_gravity="center"
                    android:layout_marginLeft="@dimen/card_item_title_margin"
                    android:layout_weight="4"
                    android:text="Sample_text"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textSize="@dimen/text_size_medium"
                    android:textStyle="italic"
                    android:layout_height="match_parent" />
            </LinearLayout>
            <TextView
                android:id="@+id/content"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_gravity="center_horizontal|top"
                android:layout_weight="4"
                android:text="Sample_text"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textSize="@dimen/text_size_content"/>
        </LinearLayout>

    </LinearLayout>
</android.support.constraint.ConstraintLayout>